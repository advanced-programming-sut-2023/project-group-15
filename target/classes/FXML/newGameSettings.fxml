<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.view.NewGameSettings">
    <HBox alignment="CENTER" prefHeight="303.0" prefWidth="600.0">
        <VBox alignment="CENTER" prefHeight="303.0" prefWidth="170.0" spacing="30.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="choose your map dimensions" textAlignment="CENTER" wrappingWidth="253.203125">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <CheckBox fx:id="twoHundredCheckBox" alignment="CENTER" lineSpacing="30.0" mnemonicParsing="false" onMouseClicked="#leftCheckBox" text="200" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </CheckBox>
            <CheckBox fx:id="fourHundredCheckBox" alignment="CENTER" lineSpacing="30.0" mnemonicParsing="false" onMouseClicked="#leftCheckBox" text="400" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </CheckBox>
        </VBox>
        <VBox alignment="CENTER" prefHeight="303.0" prefWidth="170.0" spacing="30.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="choose one of these map templates" textAlignment="CENTER" wrappingWidth="253.203125">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <CheckBox fx:id="templateOne" alignment="CENTER" lineSpacing="30.0" mnemonicParsing="false" onMouseClicked="#rightCheckBox" text="1" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </CheckBox>
            <CheckBox fx:id="templateTwo" alignment="CENTER" lineSpacing="30.0" mnemonicParsing="false" onMouseClicked="#rightCheckBox" text="2" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </CheckBox>
        </VBox>
    </HBox>
    <HBox alignment="CENTER" prefHeight="69.0" prefWidth="600.0" spacing="30.0">
        <Button mnemonicParsing="false" onMouseClicked="#checkCheckBoxes" text="Start New Game" />
        <Button mnemonicParsing="false" onMouseClicked="#GoBack" text="Back To Main Menu" />
    </HBox>
</VBox>